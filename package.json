{
  "name": "kdongs-mono",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "dev:mono": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd packages/frontend && npm start",
    "dev:backend": "cd packages/backend && npm run dev",
    "dev:backend:migrate": "cd packages/backend && node ace migration:fresh --seed --force",
    "test:frontend": "cd packages/frontend && npm run test",
    "test:backend": "cd packages/backend && npm run test",
    "test:backend:migrate": "cd packages/backend && NODE_ENV=test node ace migration:fresh --force"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lfsc09/kdongs-mono.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lfsc09/kdongs-mono/issues"
  },
  "homepage": "https://github.com/lfsc09/kdongs-mono#readme",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6"
  },
  "lint-staged": {
    "packages/frontend/src/**/*.{ts,js,json,css,scss,html,md}": [
      "npm --prefix packages/frontend run format"
    ],
    "packages/backend/**/*.{ts,js,json,env,md}": [
      "npm --prefix packages/backend run biome:check"
    ]
  }
}
