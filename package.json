{
  "name": "kdongs-mono",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "dev:setup": "cd packages/backend && ./setup-backend.sh",
    "dev:mono": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "npm start --workspace frontend",
    "dev:frontend:format": "npm run format --workspace frontend",
    "dev:backend": "npm run dev --workspace backend",
    "dev:backend:migrate": "npm run migration:fresh --workspace backend",
    "dev:backend:format": "npm run biome:check --workspace backend",
    "test:frontend": "npm run test --workspace frontend",
    "test:backend": "npm run test --workspace backend",
    "test:backend:migrate": "npm run test:migration:force --workspace backend"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lfsc09/kdongs-mono.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lfsc09/kdongs-mono/issues"
  },
  "homepage": "https://github.com/lfsc09/kdongs-mono#readme",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6"
  },
  "lint-staged": {
    "packages/frontend/src/**/*.{ts,js,json,css,scss,html,md}": [
      "npm run dev:frontend:format"
    ],
    "packages/backend/**/*.{ts,js,json,env,md}": [
      "npm run dev:backend:format"
    ]
  },
  "workspaces": [
    "packages/*"
  ]
}
