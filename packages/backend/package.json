{
  "name": "backend",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "license": "UNLICENSED",
  "scripts": {
    "start": "node bin/server.js",
    "build": "node ace build",
    "dev": "node ace serve --hmr",
    "test": "node ace test",
    "biome:check": "biome check --write --no-errors-on-unmatched",
    "typecheck": "tsc --noEmit",
    "migration:fresh": "node ace migration:fresh --seed --force",
    "test:migration:force": "NODE_ENV=test node ace migration:fresh --force"
  },
  "imports": {
    "#controllers/*": "./app/controllers/*.js",
    "#exceptions/*": "./app/exceptions/*.js",
    "#models/*": "./app/models/*.js",
    "#mails/*": "./app/mails/*.js",
    "#services/*": "./app/services/*.js",
    "#listeners/*": "./app/listeners/*.js",
    "#events/*": "./app/events/*.js",
    "#middleware/*": "./app/middleware/*.js",
    "#validators/*": "./app/validators/*.js",
    "#providers/*": "./providers/*.js",
    "#policies/*": "./app/policies/*.js",
    "#abilities/*": "./app/abilities/*.js",
    "#database/*": "./database/*.js",
    "#start/*": "./start/*.js",
    "#tests/*": "./tests/*.js",
    "#config/*": "./config/*.js"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/tsconfig": "^1.4.1",
    "@biomejs/biome": "2.3.14",
    "@japa/api-client": "^3.2.1",
    "@japa/assert": "^4.2.0",
    "@japa/expect": "^3.0.7",
    "@japa/plugin-adonisjs": "^4.0.0",
    "@japa/runner": "^5.3.0",
    "@swc/core": "1.15.11",
    "@types/big.js": "^6.2.2",
    "@types/luxon": "^3.7.1",
    "@types/node": "^25.2.1",
    "hot-hook": "^0.4.0",
    "pino-pretty": "^13.1.3",
    "ts-node-maintained": "^10.9.6",
    "typescript": "~5.9"
  },
  "dependencies": {
    "@adonisjs/auth": "^9.6.0",
    "@adonisjs/bouncer": "^3.1.6",
    "@adonisjs/core": "^6.20.0",
    "@adonisjs/cors": "^2.2.1",
    "@adonisjs/lucid": "^21.8.2",
    "@vinejs/vine": "^4.3.0",
    "big.js": "^7.0.1",
    "luxon": "^3.7.2",
    "pg": "^8.18.0",
    "randexp": "^0.5.3",
    "reflect-metadata": "^0.2.2",
    "uuid": "^13.0.0"
  },
  "hotHook": {
    "boundaries": [
      "./app/controllers/**/*.ts",
      "./app/middleware/*.ts"
    ]
  }
}
